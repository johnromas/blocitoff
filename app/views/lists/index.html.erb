<h1>My Todo Lists</h1>

<div class="row">
  <div class="col-md-8">
    <% @lists.each do |list| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to list.name, list %>
          </h4>
        </div>
      </div>
    <% end %>
    <%= link_to "New List", new_list_path, class: 'btn btn-success' %>
  </div>
</div>